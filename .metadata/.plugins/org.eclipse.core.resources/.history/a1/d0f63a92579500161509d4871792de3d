
public class Hourglass {
	public static void main(String[] args) {
		printBase(); //Print the firstline
		topHalf(); //Print the top half
	}
	
	public static void printBase(){
		System.out.print("|");
		for(int i = 1; i <= 10; i++){
			System.out.print("\"");
		}
		System.out.println("|");
	}
	public static void topHalf(){
	for (int i = 1; i <= 5; i++){//print each line
		//print spaces
		if(i == 5){
			for(int k = 1; k <= 5; k++){
				System.out.print(" ");
			}
			System.out.println("||");
		}else{
			for (int j=1; j <= i; j++){
				System.out.print(" ");
			}
			System.out.print("\\");
			for (int j=5; j - i > 0; j--) { 
				System.out.print("::");
			}
			System.out.println("/");
		}
	}
	}
	
	public static void bottomHalf(){
		
	}
}