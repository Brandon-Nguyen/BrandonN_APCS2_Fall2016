
public class Hourglass {
	public static void main(String[] args) {
		printBase(); //Print the firstline
		middle(); //Print the top half
	}
	
	public static void printBase(){
		System.out.print("|");
		for(int i = 1; i <= 10; i++){
			System.out.print("\"");
		}
		System.out.println("|");
	}
	public static void middle(){
	int numRows = 9;
	int count = 1;
	for (int i = 1; i <= numRows; i++){//print each line
		//print spaces
		for (int j=1; j <= i; j++){
			System.out.print(" ");
		}
	System.out.print("\\");
	for (int j=5; j - i > 0; j--) { 
		System.out.print("::");
	}
	System.out.println("\\");
	}
}
}